{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["google", "plugin:prettier/recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [ "babel" ],
  "rules": {
    "max-len": [
      "error",
      {
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ],
    "new-cap": "off",
    "require-jsdoc": "off",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "named": "never"
      }
    ]
  }
}
